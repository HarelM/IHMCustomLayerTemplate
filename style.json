{
  "version": 8,
  "name": "Fluds",
  "metadata": {
    "owner": "Harel Mazor"
  },
  "sources": {
    "points": {
      "type": "geojson",
      "data": "https://raw.githack.com/HarelM/IHMMapboxMapExample/main/source.geojson"
    }
  },
  "sprite": "https://israelhikingmap.github.io/VectorMap/Icons/publish/sprite",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
     {
      "id": "name-water-point",
      "type": "symbol",
      "source": "points",
      "layout": {
        "text-field": ["get", "text"],
        "text-font": ["Open Sans Cond Bold"],
        "text-anchor": "top",
        "text-size": 100,
        "text-letter-spacing": 0.2,
        "text-ignore-placement": true,
        "text-optional": true
      },
      "paint": {
        "text-color": "#ff0000",
        "text-halo-color": "white",
        "text-halo-width": 1.5,
        "text-translate": [0, 6]
      }
    }
  ]
}
