{
  "version": 8,
  "name": "Fluds",
  "metadata": {
    "owner": "Harel Mazor"
  },
  "sources": {
    "points": {
      "type": "geojson",
      "data": "https://github.com/HarelM/IHMMapboxMapExample/raw/main/source-geojson.json"
    }
  },
  "sprite": "https://israelhikingmap.github.io/VectorMap/Icons/publish/sprite",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
     {
        "id": "flud-label",
        "type": "symbol",
        "source": "points",
        "layout": {
          "text-field": ["get", "text"],
          "text-font": ["Open Sans Cond Bold"],
          "text-size": 16,
          "text-letter-spacing": 0.15,
          "text-offset": [0, 1.25],
          "text-anchor": "top"
        },
        "paint": {
          "text-color": "rgba(161, 127, 86, 1)",
          "text-halo-color": "rgba(255, 255, 255,0.8)",
          "text-halo-width": 1.5
        }
     }
  ]
}
